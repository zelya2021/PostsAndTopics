@using PostsAndTopics.Models
@model List<Topic>

<div class="topics">
    @foreach (var topic in Model)
    {
        <div class="topic thumbnail">
            <div class="caption" style="text-align:center">
                <h3>@topic.Theme</h3>
                @*<p>@Model.SurName</p>*@
                <p><strong>by @ViewBag.UserName</strong></p>
                @if (topic.UserId == @ViewBag.UserId)
                {
                    @Html.ActionLink("Delete", "DeleteTopic", "Topics", new { id = topic.Id }, new { @class = "btn btn-success" });
                    @Html.ActionLink("Edit", "EditTopic", "Topics", new { id = topic.Id }, new { @class = "btn btn-success" });
                }
                @Html.ActionLink("Detail", "ViewPosts", "Posts", new { id = topic.Id }, new { @class = "btn btn-success" })
                @*@Html.ActionLink("Edit", "Edit", "Home", new { id = @Model.Id }, new { @class = "btn btn-success" })
        @Html.ActionLink("Delete", "Delete", "Home", new { id = @Model.Id }, new { @class = "btn btn-success" })*@
            </div>
        </div>
    }
</div>

@Html.ActionLink("Create topic", "CreateTopic")